{
    "dx": 0.01,
    "dy": 0.01,
    "dt": 0.00001,
    "nx": 200,
    "ny": 75,
    "nt": 100,
    "density": 1000,
    "sampling_rate": 5,

    "write_u":             true,
    "write_v":             true,
    "write_p":             true,
    "write_div":           true,
    "write_norm_velocity": true,

    "entryFlow": true,
    "entryFlowVelocity": 40.0,

    "folder":   "results",
    "filename": "simulation",
    
    "solid": {
        "rectangle": [
            { "x1": 0,      "y1": 0,      "x2": "nx-1", "y2": 0      },
            { "x1": 0,      "y1": "ny-1", "x2": "nx-1", "y2": "ny-1" },
            { "x1": 0,      "y1": 0,      "x2": 0,      "y2": "ny-1" },
            { "x1": "nx-1", "y1": 0,      "x2": "nx-1", "y2": "ny-1" }
        ]
    },

    "solver": {
        "type": "jacobi",
        "max_iterations": 10000,
        "tolerance": 1e-2
    }
}

