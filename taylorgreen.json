{
    "dx": 0.02,
    "dy": 0.02,
    "dt": 0.01,
    "nx": 128,
    "ny": 128,
    "nt": 100,
    "density": 1.0,
    "sampling_rate": 10,

    "write_u":             true,
    "write_v":             true,
    "write_p":             true,
    "write_div":           true,
    "write_norm_velocity": true,

    "folder":   "results_taylor_green",
    "filename": "taylor_green",

    "initialcondition": {
        "type":      "taylor_green",
        "amplitude": 1.0
    },

    "solver": {
        "type":           "gauss_seidel",
        "max_iterations": 2000,
        "tolerance":      1e-2
    }
}
